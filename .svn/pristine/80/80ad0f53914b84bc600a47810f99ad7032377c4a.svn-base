<extend name="Base/common"/>
<block name="content">
<link rel="stylesheet" href="__CSS__/global.css">
<link rel="stylesheet" href="__CSS__/index.css">
<script id="G--xyscore-load" type="text/javascript" charset="utf-8" async="" src="__JS__/xyscore_main.js"></script>

<div class="wrap">
  <div class="index" style="min-height: 1782px; height: 1752px;">
    <header class="list-head">
      <nav class="list-nav clearfix"> <a href="javascript:history.go(-1)" class="list-back"></a>
        <h3 class="list-title">订单详情</h3>
      </nav>
    </header>
    <div class="news-list2 clearfix">
      <p><span class="l_l3">订单号：</span><span class="l_l">{$order.orderno}</span></p>
      <p><span class="l_l3">产品：</span><span class="l_l">{$order.ptitle}</span></p>
      <p><span class="l_l3">建仓时间：</span><span class="l_l">{$order.buytime|date='Y-m-d H:i:s',###}</span></p>
      <p><span class="l_l3">平仓时间：</span><span class="l_l">{$order.selltime|date='Y-m-d H:i:s',###}</span></p>
      <p><span class="l_l3">入仓数量：</span><span class="l_l">{$order.onumber}</span><span class="r_r">方向：</span><if condition="$order.ostyle eq 1">
          <span class="l_l2">跌</span>
      <else/>
          <span class="l_l" style="color: #ed0000;">涨</span>
      </if></p>
      <p><span class="l_l3">入仓价：</span><span class="l_l">{$order['buyprice']}</span><span class="r_r">平仓价：</span><span class="l_l">{$order.sellprice}</span></p>
     <p><span class="l_l3">建仓金额：</span><span class="l_l">{$order['jc']}</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="r_r">手续费：</span><span class="l_l">{$order.fee}</span></p>
      <p><span class="l_l3">盈亏资金：</span><span class="l_l">{$order['ykzj']|round=2}</span></p>
      <p><span class="l_l3">本单盈余：</span><span class="l_l">{$order['ploss']}</span></p><!-- ({$order['bfb']|round=2})% -->
    </div>
</div>
</div>
<script src="__JS__/jquery-2.1.1.min.js"></script>
<script src="__JS__/script.js"></script>
<script type="text/javascript" charset="utf-8" src="__JS__/sea.js" async=""></script>
</block>
