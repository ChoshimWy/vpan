<extend name="Base/common"/>
<block name="content">
	<!-- this page specific styles -->
    <link rel="stylesheet" href="__CSS__/compiled/order-list.css" type="text/css" media="screen" />
    <link href="__CSS__/lib/bootstrap.datepicker.css" type="text/css" rel="stylesheet" />
    <div class="container-fluid">
        <div id="pad-wrapper" class="users-list">
           <form action="{:U('Order/zxlist')}" method="post">
            <div class="row-fluid header">
                <h3>订单列表</h3>
                <div class="span10 pull-right" style="margin-top: 20px;">
                    <div class="tpsearch">
                    	商品分类：<select id="ostyle" class="span6" name="ostyle">
                    				<option value="">默认不选</option>
	                                <option value="1">油</option>
	                                <option value="2">白银</option>
	                                <option value="3">铜</option>
                    			</select>
                    </div>
                    <div class="tpsearch">
                    	交易金额：<select id="ploss" class="span6" name="ploss">
                    				<option value="">默认不选</option>
	                                <volist name="goods" id="vo">
	                                	<option value="{$vo['uprice']}">{$vo['uprice']}元</option>
	                                </volist>
                    			</select>
                    </div>
                    <div class="tpsearch">
                    	平仓时间：<select id="ostaus" class="span7" name="ostaus">
                    				<option value="">默认不选</option>
	                                <option value="60">1分钟</option>
	                                <option value="300">5分钟</option>
	                                <option value="1500">15分钟</option>
                    			</select>
                    </div>
                </div>
