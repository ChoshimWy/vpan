@charset "utf-8";
/* CSS Document */
.index{
    padding-bottom: 0;
}
header{
    width: 100%;
    background: #363951;
    padding: 5% 0;
}
.head-shot{
    width: 160px;
    height: 160px;
    margin: 0 auto;
    border: 8px solid #4a4c61;
    border-radius: 100%;
}
.head-shot span{
    display: block;
    width: 120px;
    height: 120px;
    margin: 13px auto 0;
    border: 5px solid #5d5e71;
    border-radius: 100%;
    background: #363951;
}
.head-img{
    display: block;
    width: 100px;
    height: 100px;
    margin: 5px auto 0;
    border-radius: 100%;
    background: #f7f0f0;
    padding: 3px;
}
.h-name{
    width: 100%;
    margin-top: 10px;
    font-size: 1.3rem;
    color: #f7f0f0;
    text-align: center;
}
.info-box{
    width: 100%;
}
.info-box i{
    float: left;
    width: 20%;
    height: 59px;
    border-bottom: 1px solid #f7f0f0;
}
.info-box i.a-1{
    background: #f68a48 url("../images/a-1.png") center no-repeat;
    background-size: 30px 19px;
}
.info-box i.a-2{
    background: #ce9721 url("../images/a-2.png") center no-repeat;
    background-size: 30px 30px;
}
.info-box i.a-3{
    background: #ce9722 url("../images/a-3.png") center no-repeat;
    background-size:30px 32px;
}
.info-box i.a-4{
    background: #a5993b url("../images/a-4.png") center no-repeat;
    background-size: 30px 30px;
}
.info-box i.a-5{
    background: #f17304 url("../images/a-5.png") center no-repeat;
    background-size: 30px 20px;
}
.info-box i.a-6{
    background: #f7e90a url("../images/a-6.png") center no-repeat;
    background-size: 30px 30px;
}
.info-box i.a-7{
    background:url("../images/a-7.png") center no-repeat;
    background-size: 50px 50px; border-bottom: 1px solid #b1b0b0;
}
.info-box i.a-8{
     background:url("../images/a-8.png") center no-repeat;
    background-size: 50px 50px; border-bottom: 1px solid #b1b0b0;
}
.info-box i.a-9{
    background:url("../images/a-9.png") center no-repeat;
    background-size: 50px 50px; border-bottom: 1px solid #b1b0b0;
}
.info-box i.a-10{
     background:url("../images/a-10.png") center no-repeat;
    background-size: 50px 50px; border-bottom: 1px solid #b1b0b0;
}


.info-detail{
	position: relative;
    float: left;
    width: 80%;
    height: 59px;
    border-bottom: 1px solid #b1b0b0;
    padding: 0 1em;
}
.detail-btn{
	position: absolute;
	right: 1em;
	top:0;
}
.info-box:last-child .info-detail{
    border-bottom: 0;
}
.acc-num{
    float: left;
}
.acc-num span{
    display: block;
    font-size: 1.2rem;
    color: #858585;
    margin-top: 8px;
}
.acc-num em{
    display: block;
    font-size:1.5rem;
    color: #505050;

}
.acc-btn{
    float: right;
  	height: 25px;
    width:40px;
  	margin: 8px 10px 0 0px;
  	padding: 0 5px;
  	border-radius: 5px;
  	font-size: 1rem;
  	color: #fff;
  	line-height: 25px;
  	text-align: center;
}
.acc-btn.blue{
    background: #42bdbd;
}
.acc-btn.red{
    background: #daac33;
}
.acc-btn.yellow{
    background: #cd9826;
}
.acc-btn.green{
    background: #51a351;
}

.acc-btn.black{
    background: #9e9e9e;
}

.acc-l{
    display: block;
    background: url("../images/arr-r.png") 98% no-repeat;
    background-size: 13px 14px;
    font-size: 1.5rem;
    color: #505050;
    line-height: 59px;
}
/****输入交易密码---Start*****/
#pwd-box{
    top: 15%;
    padding-bottom: 20px;
}
.pwd-form{
    width: 80%;
    margin:20px auto 0;
}
.form-input{
    width: 100%;
    display: block;
    border: 1px solid #dedede;
    padding:.5em;
    background: #fff;
    color: #d0d0d0;
    font-size: 1.3rem;
    border-radius: 5px;
    text-align: center;
}
.form-input input:-moz-placeholder {
    color: #d0d0d0;

}
.form-input::-webkit-input-placeholder {
    color: #d0d0d0;
}
.pwd-btn{
    display: block;
    width: 100%;
    margin: 20px auto 0;
    border: 0;
    border-radius: 5px;
    background: #daac33;
    padding: .3em 0;
    cursor: pointer;
    font-size: 1.8rem;
    text-align: center;
    color: #fff;
}
.pwd-btn.chr{
    background: #da5b34;
}
.p-link{
    width: 150px;
    display: block;
    margin: 15px auto 0;
    background: url("../images/help.png") left no-repeat;
    background-size: 24px 24px;
    padding-left: 28px;
    font-size: 1.3rem;
    color: #365acc;
    line-height: 30px;
    text-decoration: underline;

}
/****输入交易密码---End*****/
/* 理财诊断 */
.a-l-position{
    position: relative;
    padding: .2rem .4rem;
}
.m-p-piontRise {
  position: absolute;
  top: 0;
  right: -5px;
  width: .5rem ;
  height: .5rem;
  border-radius: 2.5rem;
  border: transparent;
  background-color: #ff5959;
}
.l-clientNum {
  display: block;
  font-size: 1rem;
  margin-right: 9%;
  margin-top: 0;
  color: #bbbbbb;
}
